<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Viendict.PageSearch"
             Title="Search"
             BackgroundImageSource="bg_ocean">
    <ContentPage.Content>
        <StackLayout Padding="15">
            <Frame BackgroundColor="WhiteSmoke" CornerRadius="10">
                <SearchBar Placeholder="Type a word to look up..." PlaceholderColor="Gray"
                           TextColor="CornflowerBlue" TextTransform="Lowercase"
                           FontSize="Medium" CancelButtonColor="CornflowerBlue"></SearchBar>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>