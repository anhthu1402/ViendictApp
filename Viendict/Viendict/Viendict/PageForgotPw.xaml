<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Viendict.PageForgotPw"
             BackgroundImageSource="bg_forgotpwd">
    <NavigationPage.TitleView>
        <StackLayout>
            <Label Text="Forgot Password" TextColor="White" HorizontalTextAlignment="Center" FontSize="25" Margin="0,0,75,0"/>
        </StackLayout>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout Padding="10,50,10,20">
            <Frame HeightRequest="50" CornerRadius="15" BackgroundColor="white" HasShadow="True" Padding="20,0,20,10" Margin="10,120">
                <Entry x:Name="email" Keyboard="Email" Placeholder="Enter your email to reset password" TextColor="CornflowerBlue"
                   Margin="-5,0,0,0"/>
            </Frame>

            <Button x:Name="ResetPw" Text="Reset Password" BackgroundColor="CornflowerBlue"
                    FontSize="20" TextColor="White" FontAttributes="Bold"
                    CornerRadius="15" Margin="20" Padding="0,15" VerticalOptions="EndAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>