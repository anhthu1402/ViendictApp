<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasNavigationBar="False"
             BackgroundImageSource="bg_viendict.png"
             x:Class="Viendict.MainPage">

    <StackLayout>
        <StackLayout Orientation="Horizontal" VerticalOptions="EndAndExpand" Margin="30" HeightRequest="60" HorizontalOptions="CenterAndExpand">
            <Button x:Name="Signup" Clicked="Signup_Clicked" Text="Đăng ký" WidthRequest="140" Margin="0,0,15,0"
                BackgroundColor="CornflowerBlue" TextColor="White" CornerRadius="15" FontSize="18" FontAttributes="Bold"/>
            <BoxView WidthRequest="1" BackgroundColor="Silver" Margin="0,10,0,10"/>
            <Button x:Name="Signin" Clicked="Signin_Clicked" Text="Đăng nhập" WidthRequest="140" Margin="15,0,0,0"
                BackgroundColor="CornflowerBlue" TextColor="White" CornerRadius="15" FontSize="18" FontAttributes="Bold"/>
        </StackLayout>
        <Button x:Name="NoAccount" HorizontalOptions="Center" Text="Tiếp tục mà không có tài khoản" TextColor="Gray" 
                FontSize="18" Margin="0,0,0,20" BackgroundColor="Transparent" Clicked="NoAccount_Clicked"/>
    </StackLayout>
</ContentPage>
