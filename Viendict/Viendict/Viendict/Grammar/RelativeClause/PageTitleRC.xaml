<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Viendict.Grammar.RelativeClause.PageTitleRC"
             BackgroundImageSource="bg_leaves">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="lstRCTitle" ItemTapped="lstRCTitle_ItemTapped" SeparatorColor="Black" RowHeight="80" SeparatorVisibility="Default" HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid Padding="10">
                                <Label Text="{Binding Name}" TextColor="DarkBlue" 
                                   Grid.Row="0" FontSize="Medium" VerticalOptions="Center"></Label>
                                <Label Text="{Binding Describe}" TextColor="#333333" 
                                   Grid.Row="1" FontSize="16" VerticalOptions="Center"></Label>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>