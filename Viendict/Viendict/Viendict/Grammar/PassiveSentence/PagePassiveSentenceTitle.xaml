<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Viendict.Grammar.PassiveSentence.PagePassiveSentenceTitle"
             BackgroundImageSource="bg_leaves">
    <ContentPage.Content>
        <ListView x:Name="lstPssSentenceTitle" ItemTapped="lstPssSentenceTitle_ItemTapped" RowHeight="80" SeparatorColor="Black">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Label Text="{Binding Title}" Grid.Column="0" Grid.Row="0" VerticalOptions="Center" FontSize="21" TextColor="DarkBlue"/>
                            <Label Text="{Binding Describe}" Grid.Column="0" Grid.Row="1" VerticalOptions="Center" FontSize="18" TextColor="#333"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>