<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Viendict.PageEditAcc"
             Title="Sửa hồ sơ"
             BackgroundImageSource="bg_forest">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="15,20">
                <StackLayout>
                    <Frame HeightRequest="150" WidthRequest="150" IsClippedToBounds="True" CornerRadius="100" HorizontalOptions="CenterAndExpand" HasShadow="True">
                        <Image Source="avt.png" HeightRequest="150" WidthRequest="150" Aspect="AspectFill" HorizontalOptions="Center" VerticalOptions="Center"/>
                    </Frame>
                </StackLayout>

                <StackLayout VerticalOptions="CenterAndExpand" Spacing="10">
                    <Label Padding="15,0" Text="Tên đăng nhập:" FontSize="Medium" TextColor="#26428b" FontAttributes="Bold"/>
                    <Frame Padding="15,0,15,5" Margin="10,0,10,5" CornerRadius="10" HasShadow="True">
                        <Entry x:Name="userloginname" Keyboard="Text" Placeholder="Vi nho" FontSize="Medium" 
                               VerticalOptions="Center" HeightRequest="55"/>
                    </Frame>
                    <Label Padding="15,0" Text="Email:" FontSize="Medium" TextColor="#26428b" FontAttributes="Bold"/>
                    <Frame Padding="15,0,15,5" Margin="10,0,10,5" CornerRadius="10" HasShadow="True">
                        <Entry x:Name="useremail" Keyboard="Email" Placeholder="vinho@gmail.com" FontSize="Medium" 
                               VerticalOptions="Center"  HeightRequest="55"/>
                    </Frame>
                    <!--<Label Padding="15,0" Text="Ngày sinh:" FontSize="Medium" TextColor="#26428b" FontAttributes="Bold"/>
                    <Frame Padding="15,0,15,5" Margin="10,0,10,5" CornerRadius="10" HasShadow="True">
                        --><!--<Entry x:Name="entDoB" Keyboard="Ti" Placeholder="05/05/2002" FontSize="Medium" VerticalOptions="Center"/>--><!--
                        <DatePicker x:Name="dpkDob" MinimumDate="1/1/1950" MaximumDate="12/31/2015" 
                                    Date="5/5/2002" Format="D" DateSelected="dpkDob_DateSelected"  HeightRequest="55"/>
                    </Frame>-->
                </StackLayout>
                <Button x:Name="cmdSubmit" Text="Cập nhật" BackgroundColor="CornflowerBlue"
                        FontSize="20" TextColor="White" FontAttributes="Bold"
                        CornerRadius="15" Margin="20" Padding="0,15" VerticalOptions="Center"
                        Clicked="cmdSubmit_Clicked"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>